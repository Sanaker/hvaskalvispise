<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.MainActivity">

    <TextView
        android:id="@+id/selectedDishTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/no_dish_selected"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingVertical="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="I dag spiser vi: Taco!" />

    <Button
        android:id="@+id/chooseDishButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/choose_for_me"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectedDishTextView" />

    <EditText
        android:id="@+id/newDishEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/enter_new_dish_hint"
        android:inputType="textCapSentences"
        android:imeOptions="actionDone"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toStartOf="@+id/addDishButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chooseDishButton" />

    <Button
        android:id="@+id/addDishButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_dish_button"
        android:layout_marginStart="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/newDishEditText"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/dishListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/your_dishes_title"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newDishEditText" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dishesRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dishListTitle"
        tools:listitem="@layout/item_dish" /> </androidx.constraintlayout.widget.ConstraintLayout>