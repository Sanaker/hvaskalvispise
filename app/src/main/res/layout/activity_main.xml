<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sanaker.hvaskalvispise.ui.MainActivity">

    <TextView
        android:id="@+id/selectedDishTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
    android:text="Ingen matrett valgt"
    android:textSize="24sp"
    android:textAlignment="center"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/chooseDishButton"
    app:layout_constraintVertical_bias="0.4"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"/>

    <Button
        android:id="@+id/chooseDishButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Velg en tilfeldig matrett"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectedDishTextView" />

    <!-- NYTT: Container for detaljer om valgt tilfeldig rett -->
    <LinearLayout
        android:id="@+id/randomDishDetailContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:visibility="gone"
    app:layout_constraintTop_toBottomOf="@id/chooseDishButton"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    tools:visibility="visible"> <!-- For forhåndsvisning i layout editor -->

    <TextView
        android:id="@+id/randomDishCategoryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        tools:text="Kategori: Middag" />

    <TextView
        android:id="@+id/randomDishIngredientsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        tools:text="Ingredienser: Tomat, ost, skinke, ananas, champignon, løk" />
</LinearLayout>


<EditText
android:id="@+id/newDishEditText"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:layout_marginStart="16dp"
android:layout_marginTop="24dp"
    android:layout_marginEnd="8dp"
    android:hint="Legg til en matrett (navn)"
    android:inputType="text"
    app:layout_constraintEnd_toStartOf="@id/addDishButton"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/randomDishDetailContainer" /> <!-- Nå under detaljcontainer -->

<Button
android:id="@+id/addDishButton"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginEnd="16dp"
android:text="Legg til"
app:layout_constraintBottom_toBottomOf="@id/newDishEditText"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintTop_toTopOf="@id/newDishEditText" />

    <!-- Kommentar om RecyclerView er irrelevant for denne layouten -->

<Button
android:id="@+id/buttonDishList"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginBottom="16dp"
android:text="Mat liste"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
   