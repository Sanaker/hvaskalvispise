<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sanaker.hvaskalvispise.ui.MainActivity">

    <TextView
        android:id="@+id/selectedDishTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No dish selected"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />
    <Button
        android:id="@+id/chooseDishButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Random Dish"
        app:layout_constraintTop_toBottomOf="@id/selectedDishTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/newDishEditText"
        android:layout_width="0dp" android:layout_height="wrap_content"
        android:hint="Enter a new dish"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/chooseDishButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/addDishButton" android:layout_marginTop="32dp"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/addDishButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        app:layout_constraintTop_toTopOf="@id/newDishEditText" app:layout_constraintBottom_toBottomOf="@id/newDishEditText" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dishesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</androidx.constraintlayout.widget.ConstraintLayout>